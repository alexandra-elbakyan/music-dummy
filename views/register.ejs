<!DOCTYPE html>
<html>
  <head>
    <title>setup</title>
    <script src="/javascripts/axios.min.js"></script>
  </head>
  <body>
    <script>

      async function register()
      {
          var data = { email: document.getElementById('email').value,
                    username: document.getElementById('username').value,
                    password: document.getElementById('password').value}

          await axios.post('/user/register', data)
          .then(function (response) {
              console.log(response);
              if (response.data.registered)
                  window.location.href = '/user/login';
              else
              {
                  document.getElementById('error').style.display = 'block';
                  document.getElementsByTagName('h1')[0].style.display = 'none';
              }
          });
      }
    
    </script>


    <style type="text/css">
        body {margin:0; padding:0; font-size: 24px; font-family: monospace; text-align: center}

        .main {display: inline-block;}
        
        #app {display: inline-block; width: 100%; text-align: center; font-size: 192px; font-weight: bold; color: #777; padding-bottom: 64px;}
        #login {background-color: gold; border: solid 6px #444; border-radius: 32px; color: #444; display: grid; padding: 64px; text-align: left;}

        #login h1 {margin: 18px 0 0 0; text-align: center; font-size: 48px;}
        #login div {place-self: center; margin-top: 48px}

        .form label {padding: 18px 0 4px 0; text-align: left; display: inline-block; font-size: 22px;}
        .form input {padding: 8px 16px; border: none; border-bottom: solid 1px #ccc; line-height: 40px; font-size: 20px; text-align: center; outline: none; margin-right: 18px; border-radius: 12px;}
        #login .form div {margin-top: 0; display: flex; align-items: end;}
        #login .form input {width: 233px}
        #login .form .button {text-align: center; width: 265px}

        button {border: solid 1px gold; border-radius: 12px; padding: 8px 16px; width: 256px; height: 55px; background: mediumseagreen; color: #444; font-size: 20px; cursor: pointer; color: white; font-weight: bold;}
        button:hover {background-color: yellowgreen;}

        #login a {text-decoration: none; font-size: 18px; color: darkolivegreen}
        #login a:hover {text-decoration: dotted underline;}

        #error {font-size: 22px; text-align: center; display: none;}
        #error span {font-size: 192px; line-height: 96px;}

        #motto {font-size: 26px; color: #bbb}

    </style>
    <div class = "main">
    <div id = "app">μ*<span id = "motto">for music</span></div>

    <div id = "login">
      <h1>registration</h1>
      <div id = "error"><span>☹</span><br>the email<br>already exists</div>
      <div class = "form">
        <div>
          <span><label>username</label><br><input type = "text" id = "username"></span>
          <span><label>password</label><br><input type = "password" id = "password"></span>
        </div>
        <div>
          <span><label>email</label><br><input type = "text" id = "email"></span>
          <span class = "button"><button onclick = "register()">register</button></span>
        </div>
      </div>
    </div>
  </div>

  </body>
</html>
